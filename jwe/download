        <div class="space-y-4 mb-8">
            <button data-os="Windows" data-version="1.0.0" data-size="45 MB"
                class="download-btn inline-flex items-center justify-center w-full py-3 px-6 bg-indigo-600 text-white font-bold text-xl rounded-xl shadow-lg hover:bg-indigo-700 transition duration-300 transform hover:scale-[1.01] active:scale-[0.98]">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1l-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                Download voor Windows (45 MB)
            </button>
        </div>

        <p class="text-sm text-gray-500 mb-8">
            Download start automatisch na het klikken op de knop.
        </p>

        <div id="message-box" class="mt-8 hidden p-4 bg-green-100 border border-green-300 rounded-lg text-green-800">
            <span id="download-message">Download start zo... Bedankt!</span>
        </div>
        
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.download-btn').forEach(button => {
                button.addEventListener('click', handleDownload);
            });
        });

        function handleDownload(event) {
            event.preventDefault(); 
            const clickedButton = event.currentTarget;
            
            const os = clickedButton.getAttribute('data-os');
            const version = clickedButton.getAttribute('data-version');
            const size = clickedButton.getAttribute('data-size'); 
            
            const messageBox = document.getElementById('message-box');
            const downloadMessage = document.getElementById('download-message');

            const extension = 'exe';

            const fileName = `jwe-browser-${version}.${extension}`;
            
            const downloadBaseUrl = '/downloads/'; 
            const downloadUrl = downloadBaseUrl + fileName;

            downloadMessage.innerHTML = `Download voor <strong>JWE Browser ${version}</strong> (${os}, ${size}) start zo.`;
            
            messageBox.classList.remove('hidden', 'bg-red-900', 'border-red-700', 'text-red-300');
            messageBox.classList.add('bg-green-100', 'border-green-300', 'text-green-800');

            console.log(`Start download van: ${downloadUrl}`);
            window.location.href = downloadUrl;

            const allButtons = document.querySelectorAll('.download-btn');
            allButtons.forEach(btn => {
                btn.disabled = true;
                btn.classList.add('opacity-50', 'cursor-not-allowed');
                btn.classList.remove('hover:scale-[1.01]');
            });

            setTimeout(() => {
                allButtons.forEach(btn => {
                    btn.disabled = false;
                    btn.classList.remove('opacity-50', 'cursor-not-allowed');
                    btn.classList.add('hover:scale-[1.01]');
                });
            }, 5000);
        }
    </script>
